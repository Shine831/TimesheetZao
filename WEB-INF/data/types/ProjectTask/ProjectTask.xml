<?xml version="1.0" encoding="UTF-8"?>
<type name="ProjectTask" superclass="com.jalios.jcms.Content"
	debatable="false" unitFieldEdition="true" audienced="false"
	categoryTab="true" readRightTab="true" updateRightTab="true"
	templateTab="false" workflowTab="true" advancedTab="true"
	database="true" hbm="true" revision="true" categories="">
	<title ml="true">
		<label xml:lang="en">Title</label>
		<label xml:lang="fr">Titre</label>
	</title>

	<fields>

		<field name="project" editor="link" required="true"
			compactDisplay="false" type="generated.Project" parent="false"
			ml="false" descriptionType="tooltip" searchable="false" html="false"
			checkHtml="true">
			<label xml:lang="fr">Projet</label>
		</field>

		<field name="assignee" editor="member" required="true"
			compactDisplay="false" type="com.jalios.jcms.Member" chooser="popup"
			ml="false" descriptionType="tooltip" searchable="false" html="false"
			checkHtml="true" groups="">
			<label xml:lang="fr">Assigné à</label>
		</field>

		<field name="reporter" editor="member" required="false"
			compactDisplay="false" type="com.jalios.jcms.Member" chooser="popup"
			ml="false" descriptionType="tooltip" searchable="false" html="false"
			checkHtml="true" groups="">
			<label xml:lang="fr">Créateur</label>
		</field>

		<field name="dueDate" editor="date" required="false"
			compactDisplay="false" type="java.util.Date" future="true"
			past="true" dateOnly="false" dateFormat="long" ml="false"
			descriptionType="tooltip" searchable="false" html="false"
			checkHtml="true">
			<label xml:lang="fr">Date d'échéance</label>
		</field>

		<field name="estimatedHours" editor="double" required="false"
			compactDisplay="false" type="double" decimals="2" default="0"
			ml="false" descriptionType="tooltip" searchable="false" html="false"
			checkHtml="true" unitPos="after">
			<label xml:lang="fr">Heures estimées</label>
		</field>

		<field name="spentHours" editor="double" required="false"
			compactDisplay="false" type="double" decimals="2" default="0"
			ml="false" descriptionType="tooltip" searchable="false" html="false"
			checkHtml="true" unitPos="after">
			<label xml:lang="fr">Heures réalisées</label>
		</field>

		<field name="status" editor="enumerate" required="true"
			compactDisplay="false" type="String" chooser="listbox"
			valueList="TODO|IN_PROGRESS|BLOCKED|DONE"
			labelList="À faire|En cours|Bloquée|Terminée" ml="false"
			descriptionType="tooltip" searchable="false" html="false"
			checkHtml="true" default="TODO">
			<label xml:lang="fr">Statut</label>
		</field>

		<field name="priority" editor="enumerate" required="false"
			compactDisplay="false" type="String" chooser="listbox"
			valueList="LOW|MEDIUM|HIGH" labelList="Basse|Moyenne|Haute"
			ml="false" descriptionType="tooltip" searchable="false" html="false"
			checkHtml="true" default="MEDIUM">
			<label xml:lang="fr">Priorité</label>
		</field>

		<field name="description" editor="wysiwyg" required="true"
			compactDisplay="false" type="String" searchable="true" rows="16"
			cols="100" ml="true" checkHtml="true" inline="true"
			descriptionType="tooltip" html="false">
			<label xml:lang="fr">Description</label>
		</field>

	</fields>

	<label xml:lang="fr">Tâche de projet</label>
</type>
